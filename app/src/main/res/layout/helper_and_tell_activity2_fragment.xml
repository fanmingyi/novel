<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/helperandtellactivity2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                android:text="反馈"
        />
    </androidx.appcompat.widget.Toolbar>
    <EditText
            android:id="@+id/message"
            android:layout_width="0dp"

            app:layout_constraintVertical_bias="0.1"
            android:layout_height="0dp"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/et_border_shape"
            app:layout_constraintHeight_percent="0.3"
            android:hint="如果您在使用中遇到问题，或对产品更好的意见欢迎您告诉我们。"
            app:layout_constraintTop_toBottomOf="@id/tb_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <com.google.android.material.button.MaterialButton
            app:layout_constraintTop_toBottomOf="@id/message"
            app:layout_constraintLeft_toLeftOf="@id/message"
            app:layout_constraintRight_toRightOf="@id/message"
            android:layout_width="0dp"
            android:id="@+id/btn_submit"
            android:text="提交"
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
