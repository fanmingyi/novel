<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/iv_icon"
            app:layout_constraintVertical_weight="6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/select_home_main"
            android:layout_gravity="center"
            android:tintMode="src_in"
            android:tint="@drawable/select_home_tv_color"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_tab_name"/>

    <TextView android:layout_width="wrap_content"
              android:selectableItemBackground="@null"
              android:id="@+id/tv_tab_name"
              android:text="www"
              app:layout_constraintVertical_weight="4"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_gravity="center"
              android:textSize="12sp"
              android:textColor="@drawable/select_home_tv_color"
              android:selectableItemBackgroundBorderless="@null"
              android:layout_height="0dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/iv_icon"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
