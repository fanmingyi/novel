<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:id="@+id/mcv_root"
		android:layout_margin="5dp"
		app:cardElevation="3dp"
		app:strokeColor="#999999"
		app:cardCornerRadius="7dp"
		app:strokeWidth="0.3dp"
		android:layout_height="wrap_content"
		app:cardBackgroundColor="@color/colorDefaultBackground"
		>

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="wrap_content"
			android:padding="4dp"
			android:layout_gravity="center"
			android:layout_height="wrap_content">

		<ImageView
				app:layout_constraintTop_toTopOf="parent"
				android:id="@+id/iv_book_cover"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				android:layout_width="100dp"
				android:layout_height="120dp"/>

		<TextView
				android:layout_marginTop="3dp"
				app:layout_constraintTop_toBottomOf="@id/iv_book_cover"
				android:id="@+id/tv_book_name"
				app:layout_constraintLeft_toLeftOf="@id/iv_book_cover"
				app:layout_constraintRight_toRightOf="@id/iv_book_cover"
				android:layout_width="wrap_content"
				android:text="小说名字"
				android:layout_height="wrap_content"/>
	</androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>

