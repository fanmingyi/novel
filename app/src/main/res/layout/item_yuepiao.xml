<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_marginTop="10dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="115dp">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:id="@+id/iv_avtor_icon"
            android:src="@mipmap/kfc"
            android:layout_marginLeft="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="30dp"/>
    <TextView
            android:textColor="@color/colorText"
            android:text="KFC合作券"
            android:layout_marginLeft="3dp"
            app:layout_constraintTop_toTopOf="@id/iv_avtor_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_avtor_icon"
            app:layout_constraintLeft_toRightOf="@id/iv_avtor_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/img_shadow"
            app:layout_constraintLeft_toRightOf="@id/iv_avtor_icon"
            app:layout_constraintTop_toBottomOf="@id/iv_avtor_icon"
            android:layout_width="150dp"
            android:scaleType="fitStart"
            android:layout_height="70dp"
            android:src="@mipmap/yuepiao"
    />

    <ImageView
            android:id="@+id/img_shadow2"
            app:layout_constraintTop_toTopOf="@id/img_shadow"
            app:layout_constraintBottom_toBottomOf="@id/img_shadow"
            app:layout_constraintLeft_toRightOf="@id/img_shadow"
            android:layout_width="150dp"
            android:scaleType="fitStart"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/yuepiao"
    />
    <View
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#eee"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>