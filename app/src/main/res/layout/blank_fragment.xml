<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/root"
        tools:context=".ui.fragment.BootOneFragment">


    <ImageView
            android:layout_width="match_parent"
            android:id="@+id/iv_bg1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/pg1_1"
    />

    <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:id="@+id/iv_bg2"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/pg1_2"
    />


    <FrameLayout
            android:id="@+id/fl_phone_img_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="W,16:9"
            app:layout_constraintWidth_percent="0.35"
    >
        <ImageView
                android:id="@+id/iv_show_1"
                android:src="@mipmap/weixin1"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/iv_show_2"
                android:scaleType="centerCrop"
                android:src="@mipmap/weixin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="W,16:9"
            app:layout_constraintWidth_percent="0.4"
            android:src="@mipmap/phone1"
            android:id="@+id/imageView2"/>


    <!--<View-->
    <!--android:layout_width="1dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/phone_left"-->
    <!--app:layout_constraintEnd_toEndOf="@id/imageView2"-->
    <!--app:layout_constraintStart_toStartOf="@+id/imageView2"/>-->


</androidx.constraintlayout.widget.ConstraintLayout>